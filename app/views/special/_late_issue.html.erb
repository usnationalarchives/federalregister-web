<div class="row fr-head-metadata-bar fr-head-metadata-bar-late">
  <div class="<%= bootstrap_col(xs: 3, md: 3) %> fr-head-meta-label-holder">
    <div class="fr-head-meta-label">
      <i class="icon-fr2-calendar-alt"></i>
      <h4>
        <%= link_to 'Current Issue', current_document_issue_path %>
      </h4>
    </div>
  </div>

  <div class="<%= bootstrap_col(xs: 9, md: 9) %> fr-head-meta-counts">
    <p>
      Today's issue is currently unavailable; we apologize for any inconvenience.
      <%= link_to 'Browse other dates.', current_document_issue_path %>
    </p>
  </div>
</div>
