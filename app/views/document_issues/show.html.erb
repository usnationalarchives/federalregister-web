<div class="title document-issue">
  <span><%= @presenter.date %> Issue</span>
</div>

<!-- BOOTSTRAP SCOPE START -->
<div class="bootstrap-scope">
<!-- BOOTSTRAP SCOPE START -->

  <div class="wrapper">
    <div class="container fixed">

      <div class="row">
        <div class="col-xs-12 col-md-12">
          <%= render partial: 'issues/document_summary',
              locals: {presenter: @doc_presenter} %>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-9 col-md-9 doc-content doc-toc">
        </div>
        <div class="col-xs-3 col-md-3 doc-subscribe">
          <div class="row">
            <div class="col-xs-12 col-md-12">
              <%= subscribe_box %>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-12 col-md-12">
              <%= esi document_issues_by_month_path(
                @doc_presenter.date.strftime('%Y'),
                @doc_presenter.date.strftime('%m'),
                current_date: @doc_presenter.date.to_s(:iso)
              ) %>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-9 col-md-9 doc-toc">
          <%= fr_box "Issue Table of Contents", :official_toc, header: {seal: true} do %>
            <span class="icon-fr2 icon-fr2-NARA1985Seal doc-background"></span>

            <div class="doc doc-document-issue">
              <%= render partial: 'issues/table_of_contents', locals: {
                agencies: @presenter.agencies,
                document_partial: @presenter.document_partial
              } %>
            </div>
          <% end %>
        </div>
        <div class="col-xs-3 col-md-3 doc-toc-nav">
          <%= fr_box_small "Documents by Agency", :official_doc_details, header: {hover: false} do %>
            <%= render partial: 'document_issues/agency_count_bar', locals: {
                date: @presenter.date,
                agencies: @presenter.agencies
              } %>
          <% end %>
        </div>
      </div>

      <div class="clearfix" style="height: 100px;"></div>
    </div>
  </div>

<!-- BOOTSTRAP SCOPE END -->
</div>
<!-- BOOTSTRAP SCOPE END -->
