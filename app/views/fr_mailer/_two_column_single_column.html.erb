<table border="0" cellpadding="0" cellspacing="0" width="100%" class="column <%= table_class %>">
  <tr>
    <td>
      <table border="0" cellpadding="0" cellspacing="0" class="header">
        <tr>
          <td valign="center" width="50">
            <img src="<%= mailer_asset_url(highlight.image) %>" style="max-width:72px;" class="float_left" />
          </td>
          <td valign="center" width="270">
            <h4 class="h4 float_left <%= highlight.name %>"><%= highlight.title %></h4>
          </td>
        </tr>
      </table>
    </td>
  </tr>
  <tr>
    <td valign="top">
      <div>
        <p class="column_content">
          <%= highlight.content.html_safe %>
        </p>
      </div>
    </td>
  </tr>
</table>

