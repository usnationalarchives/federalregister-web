<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta name="keywords" content="government federal register executive rulings notices" />
<meta http-equiv="X-UA-Compatible" content="chrome=1">
<meta name="medium" content="news" />

<%= tag(:meta, :name => 'title', :content => yield(:page_title) ) if yield(:page_title) %>
<%= tag(:meta, :name => 'description', :content => yield(:description) ) if yield(:description) %>

<!-- Open Graph Tags -->
<%= tag(:meta, :property => 'og:title',
      :content => yield(:page_title).present? ? yield(:page_title) : "Federal Register" ) %>
<%= tag(:meta, :property => 'og:site_name',
      :content => "Federal Register" ) %>
<%= tag(:meta, :property => 'og:image',
      :content => yield(:og_image).present? ? yield(:og_image) :
      "https://www.federalregister.gov/assets/open_graph_site_banner.png" ) %>
<%= tag(:meta, :property => 'og:url',
      :content => request.url ) %>
<%= tag(:meta, :property => 'og:description',
      :content => yield(:description).present? ? yield(:description) : "Search, browse and learn about the Federal Register. Federal Register 2.0 is the unofficial daily publication for rules, proposed rules, and notices of Federal agencies and organizations, as well as executive orders and other presidential documents."  ) %>
<%= tag(:meta, :property => 'og:type',
      :content => yield(:og_type) ) if yield(:og_type).present? %>
<%= tag(:meta, :property => 'article:published_time',
      :content => yield(:og_published_time) ) if yield(:og_published_time).present? %>
