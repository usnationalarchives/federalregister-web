<dl class="metadata" id="col-1">
  <dt class="pub_date">Publication Date:</dt>
  <dd><%= clipping.article.publication_date %></dd>

  <dt class="fr_citation">Citation:</dt>
  <dd><%= clipping.article.citation %></dd>

  <dt class="pages">Pages:</dt>
  <dd><%= clipping.article.pages %></dd>
</dl>
<dl class="metadata" id="col-2">

  <dt class="subtype">Subtype:</dt>
  <dd><%= clipping.article.subtype %></dt>

  <% if clipping.article.subtype == 'Executive Order' %>
    <dt class="eo_num">EO Number:</dt>
    <dd><%= clipping.article.executive_order_number %></dd>
  <% end %>

  <% if clipping.article.president.present? && clipping.article.president.name.present? %>
    <dt class="pres_name">Signed by:</dt>
    <dd><%= clipping.article.president.name %></dd>
  <% end %>

  <dt class="pub_date">Signing Date:</dt>
  <dd><%= clipping.article.signing_date %></dd>
</dl>
<dl class="metadata" id="col-3">
  <% if clipping.article.corrections.present? %>
    <dt class="corrected_by">Corrected by:</dt>
    <%= clipping.article.corrected_by %>
  <% end %>

  <% if clipping.article.correction_of.present? %>
    <dt class="correction_of">Correction of:</dt>
    <dd><%= clipping.article.corrects %></dd>
  <% end %>
</dl>
