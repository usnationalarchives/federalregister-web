<dl class="metadata" id="col-1">
  <dt class="pub_date">Publication Date:</dt>
  <dd><%= clipping.document.publication_date %></dd>

  <dt class="fr_citation">Citation:</dt>
  <dd><%= clipping.document.citation %></dd>

  <dt class="pages">Pages:</dt>
  <dd><%= clipping.document.pages %></dd>
</dl>
<dl class="metadata" id="col-2">
  <%= clipping.document.agency_dt_dd %>
</dl>
<dl class="metadata" id="col-3">
  <%= clipping.document.docket_dt_dd %>

  <% if clipping.document.corrections.present? %>
    <dt class="corrected_by">Corrected by:</dt>
    <%= clipping.document.corrected_by %>
  <% end %>

  <% if clipping.document.correction_of.present? %>
    <dt class="correction_of">Correction of:</dt>
    <dd><%= clipping.document.corrects %></dd>
  <% end %>
</dl>
