<div class="suggestion matching-citation">
  <%= fr_icon 'documents' %>

  <div class="suggestion-content">
    <p>
      It looks like you were searching for the document number
      <span class="term"><%= document_number_suggestion.document_number %></span>.
    </p>

    <div class="matching-citation-documents">
      <ul>
        <%= render partial: 'search/documents/suggestions/citation_suggestion_result',
          locals: {
            document: DocumentDecorator.decorate(document_number_suggestion.document),
            page: nil
          } %>
      </ul>
    </div>
  </div>
</div>
