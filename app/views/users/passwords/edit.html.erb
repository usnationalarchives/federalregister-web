<% page_title "My FR Reset Password" %>

<% description t('my_fr.description') %>

<% title do %>
  <%= fr_icon 'nav_male_female_user' %>
  My FR
<% end %>

<%= render :partial => "devise/shared/tabs" %>

<div class="signup_bar">
  <%= semantic_form_for resource,
    as: resource_name,
    url: password_path(resource_name),
    authenticity_token: false,
    html: {
      method: :put,
      class: 'user-password-reset'
    } do |f| %>

    <%= devise_error_messages! %>

    <%= f.inputs do %>
      <%= f.hidden_field :reset_password_token %>

      <%= f.input :password, :as => :password %>
      <%= f.input :password_confirmation, :as => :password, :required => true %>
    <% end %>

    <%= f.buttons do %>
      <%= f.commit_button "Change my password" %>
    <% end %>
  <% end %>
</div>
