<% page_title @document.title %>
<% meta_description truncate_words(strip_tags(@document.abstract), :length => 300) %>
<%= add_handlebars_template('interstitial_tender_modal', 'interstitial-tender-modal') %>

<div class="title"><span><%= @document.type %></span></div>

<%= render partial: 'metadata_content_area', locals: {document: @document} %>

