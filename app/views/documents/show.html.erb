<div class="wrapper">
  <div class="container fixed">
    <div class="clearfix"></div>

    <div class="row doc doc-official">
      <%= render partial: 'page_content', locals: {document: @document} %>
      <%= render partial: 'document_side_bar', locals: {document: @document} %>
    </div>

    <div class="clearfix" style="height: 100px;"></div>
  </div>
</div>
<!-- BOOTSTRAP SCOPE END -->
</div>
