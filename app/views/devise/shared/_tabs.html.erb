<ul class="signup_tabs">
  <li class="<%= controller_name == 'sessions' ? 'on' : '' %>">
    <%= link_to_if(controller_name != 'sessions', "Sign in", new_session_path() ) %>
  </li>
  <li class="<%= devise_mapping.registerable? && controller_name == 'registrations'  ? 'on' : '' %>">
    <%= link_to_if(devise_mapping.registerable? && controller_name != 'registrations', "Sign up", user_registration_path() ) %>
  </li>
  <li class="<%= devise_mapping.recoverable? && controller_name == 'passwords'  ? 'on' : '' %>">
    <%= link_to_if(devise_mapping.recoverable? && controller_name != 'passwords', "Reset Password", new_password_path(resource_name) ) %>
  </li>
</ul>
