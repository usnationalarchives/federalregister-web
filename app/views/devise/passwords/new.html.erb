<div class="title"><span>My FR</span></div>

<%= render :partial => "devise/shared/tabs" %>

<div class="signup_bar">
  <%= semantic_form_for resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "formtastic user" } do |f| %>
    <%= devise_error_messages! %>
  
    <%= f.inputs do %>
      <%= f.input :email, :as => :email %>
    <% end %>

    <%= f.buttons do %>
      <%= f.commit_button "Send me password reset instructions" %>
    <% end %>
  <% end %>
</div>
