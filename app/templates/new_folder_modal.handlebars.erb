<div id="new-folder-modal" class="modal">
  <a href="#" class="jqmClose new_folder_close">Close</a>

  <h3 class="title_bar">
    <span class="icon-fr2 icon-fr2-folder"></span>
    Create New Folder
  </h3>
  <p class='instructions'>
    Creating folders will help you organize your clipped articles.<br />
    <span id="fyi">When this folder is created the current article will be added to that folder.</span>
  </p>

  <div class="folder_error">
    <p>
      <span class="icon-fr2 icon-fr2-alert_alt"></span>
      <span class="message"></span>
    </p>
  </div>
  
  <%= semantic_form_for :folder, :authenticity_token => false, :url => folders_path() do |f| %>
    <%= render :partial => "folders/form", :locals => {:f => f} %>
  <% end %>

  <div class="folder_create">
    <p>
      Creating folder and saving clipping... 
      <span class="icon loader"></span>
    </p>
  </div>

  <div class="folder_success">
    <p><span class="icon-fr2 icon-fr2-check_mark"></span></p>
  </div>
</div>

